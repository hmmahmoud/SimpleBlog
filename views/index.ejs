<%- include("partials/header.ejs"); %>

<% if (posts.length === 0) { %>
    <p>No posts yet. Start by creating one!</p>
<% } else { %>
    <ul>
        <% posts.forEach(post => { %>
            <li>
                <h3><%= post.title %></h3>
                <p><%= post.content %></p>
            </li>
        <% }); %>
    </ul>
<% } %>

<%- include("partials/footer.ejs"); %>


 